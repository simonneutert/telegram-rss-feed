{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb", "prettier", "plugin:mocha/recommended"],
  "plugins": ["prettier", "mocha"],
  "rules": {
    "prettier/prettier": ["error"],
    "mocha/no-skipped-tests": "error",
    "mocha/no-exclusive-tests": "error"
  },
  "settings": {
    "mocha/additionalCustomNames": [
      {
        "name": "describeModule",
        "type": "suite",
        "interfaces": ["BDD"]
      },
      {
        "name": "testModule",
        "type": "testCase",
        "interfaces": ["TDD"]
      }
    ]
  }
}
